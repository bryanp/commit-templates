# frozen_string_literal: true

require File.expand_path("../lib/<%= config.ruby.gem.path! || config.project.slug! %>/version", __FILE__)

Gem::Specification.new do |spec|
  spec.name = <%= config.project.slug!.inspect %>
  spec.version = <%= config.ruby.gem.namespace %>::VERSION
  spec.summary = <%= config.project.description!.inspect %>
  spec.description = spec.summary

  spec.author = <%= config.project.author.name!.inspect %>
  spec.email = <%= config.project.author.email!.inspect %>
  spec.homepage = <%= config.project.author.homepage!.inspect %>

  spec.required_ruby_version = ">= <%= config.ruby.gem.version! || "2.5.0" %>"

  spec.license = <%= config.license.name!.inspect %>

<%= config.ruby.gem.extra! %>
end
